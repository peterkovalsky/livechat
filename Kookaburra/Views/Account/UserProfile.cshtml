@model Kookaburra.Models.ProfileViewModel

<div class="profile page">
    <div class="page-header">
        <h1 class="page-title">
            My Profile
        </h1>
    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <div class="panel">
                    <div class="panel-body">
                        @using (Html.BeginForm("UserProfile", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group row">
                                <label class="col-md-3 form-control-label">First Name: </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", autocomplete = "off", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 form-control-label">Last Name: </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", autocomplete = "off", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 form-control-label">Your Email: </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", autocomplete = "off", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9 offset-md-3">
                                    <button type="button" class="btn btn-primary">Submit </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
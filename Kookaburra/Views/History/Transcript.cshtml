@model  Kookaburra.Models.History.TranscriptViewModel

<div class="page">

    <div class="page-header">
        <h1 class="page-title">Chat Transcript</h1>
    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-sm-8 masonry-item">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="panel-title-icon icon wb-chat" aria-hidden="true"></i>Last comments</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group list-group-dividered list-group-full">

                            @foreach (var message in Model.Messages)
                            {
                                <li class="list-group-item">
                                    <div class="media comment">
                                        <div class="media-left">
                                            <a class="avatar" href="javascript:void(0)">
                                                <img src="/images/user-1.png">
                                            </a>
                                        </div>
                                        <div class="media-body comment-body">
                                            <strong>@message.Author</strong>
                                            <div class="comment-meta">
                                                <span class="date">@message.Time</span>
                                            </div>
                                            <div class="comment-content">
                                                <p>@message.Text</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
      
    </div>

</div>
@model  Kookaburra.Models.History.TranscriptViewModel

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="panel-title-icon icon wb-chat" aria-hidden="true"></i>Last comments</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group list-group-dividered list-group-full">

            @foreach (var message in Model.Messages)
            {
            <li class="list-group-item">
                <div class="media comment">
                    <div class="media-left">
                        <a class="avatar avatar-online" href="javascript:void(0)">
                            <img src="/images/user-1.png" alt="...">
                            <i></i>
                        </a>
                    </div>
                    <div class="media-body comment-body">
                        <a class="comment-author">@message.Author</a>
                        <div class="comment-meta">
                            <span class="date">@message.Time</span>
                        </div>
                        <div class="comment-content">
                            <p>@message.Text</p>
                        </div>
                    </div>
                </div>
            </li>
            }     
        </ul>
    </div>
</div>
@model Kookaburra.Models.AlertViewModel

@if (Model.IsSuccess)
{
    <div class="alert dark alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        @Model.SuccessMessage
    </div>
}
else
{
    if (Model.Errors != null)
    {
        <div class="alert dark alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            @if (Model.Errors.Count() > 1)
            {
                <ul>
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            }
            else if (Model.Errors.Count() == 1)
            {
                @Model.Errors.First()
            }
        </div>
    }
}
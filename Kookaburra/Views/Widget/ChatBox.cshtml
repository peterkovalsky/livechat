@model Kookaburra.ViewModels.Widget.ChatBoxStyleViewModel

@{
    Layout = null;

}

@*<script>*@

var onlinechatiframe = document.getElementById('onlinechatiframe');
onlinechatiframe.focus();

    function iframeLoad()
    {
        var el = document.getElementById('onlinechatwrapper');
        el.style.display = '';


    }

    function toggleChat(obj) {
        var el = document.getElementById(obj);
        var wrapper = document.getElementById('onlinechatwrapper');

        if (el.style.display != 'none') {
            el.style.display = 'none';
            wrapper.style.height = '37px';
        }
        else {
            el.style.display = '';
            wrapper.style.height = '355px';
        }
    }

    var chatbox = '<div id="onlinechatwrapper" style="' +
        'display:none; ' +
        'position: fixed; '+
        'bottom: 0px; '+
        'right: 20px; '+
        'margin: 0px; '+
        'padding: 0px; '+
        'overflow: hidden; '+
        'z-index: 99999999; '+
        'width: 300px; '+
        'height: 37px; '+
        'background-color: transparent;\">' +

    '<div id="chat-box-header" onclick="toggleChat(\'onlinechatiframe\')" style="cursor: pointer; background: #2c3e50 url(\'@(Model.ChatServerHost)/images/logo-small.png\') no-repeat right center; border-right: 10px solid transparent; color: white; padding: 10px 10px 9px; font-size: 14px; ">' +
        'Hi there' +
        '</div>' +
    '<iframe onload="iframeLoad();" id="onlinechatiframe" scrolling="0" frameborder="0" src="@(Model.ChatServerHost)/widget/@(Model.Key)" style="display:none; background-color: transparent;vertical-align: text-bottom; overflow: hidden; position: relative; width: 100%; height:100%; margin: 0px; z-index: 999999;"></iframe></div>';

     document.body.innerHTML += chatbox;

@*</script>*@